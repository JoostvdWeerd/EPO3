library IEEE;
use IEEE.std_logic_1164.ALL;

entity state_gradius is
   port(clk    : in  std_logic;
        reset  : in  std_logic;
        left   : in  std_logic;
        right  : in  std_logic;
        up     : in  std_logic;
        down   : in  std_logic;
        shoot  : in  std_logic;
	collision_player : in std_logic;
        game_state_info_signal: out std_logic_vector(1 downto 0));
end state_gradius;

